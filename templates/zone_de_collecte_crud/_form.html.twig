{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

    <div class="row g-3 mb-4">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(field, {
                            'attr': {
                                'class': 'form-control rounded-3 shadow-sm' ~ (form_errors(field) ? ' is-invalid' : ''),
                                'placeholder': field.vars.label
                            }
                        }) }}
                        {{ form_label(field, null, {
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {% if form_errors(field) %}
                            <div class="invalid-feedback">
                                {{ form_errors(field) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="d-flex justify-content-end gap-3 border-top pt-4">
        <a href="{{ path('app_zone_de_collecte_crud_index') }}" class="btn btn-outline-secondary px-4">
            Annuler
        </a>
        <button type="submit" class="btn btn-primary px-4 shadow-sm">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>

{{ form_end(form) }}