{% extends 'base.html.twig' %}

{% block title %}Gestion des zones de collecte{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <!-- En-tête avec boutons -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h2 mb-2">Zones de collecte</h1>
            <p class="text-muted mb-0">Gestion des différentes zones de collecte</p>
        </div>
        
        <div class="d-flex flex-column flex-md-row gap-3 w-100 w-md-auto">
            <!-- Formulaire de recherche -->
            <form method="get" class="d-flex flex-column flex-md-row gap-2 flex-grow-1">
                <input type="text" name="q" value="{{ search_term }}" 
                       placeholder="Rechercher une zone" 
                       class="form-control">
                <input type="time" name="time" value="{{ search_time }}" 
                       class="form-control" style="min-width: 120px;">
                <button type="submit" class="btn btn-primary px-4">Rechercher</button>
            </form>

            <!-- Boutons d'actions -->
            <div class="d-flex flex-column flex-md-row gap-2">
                <a href="{{ path('app_zone_export') }}" class="btn btn-success px-4">Exporter</a>
                <form method="post" action="{{ path('app_zone_import') }}" enctype="multipart/form-data" class="d-flex">
                    <button type="button" class="btn btn-primary px-4" onclick="this.nextElementSibling.click()">Importer</button>
                    <input type="file" name="excel_file" style="display:none" onchange="this.form.submit()" accept=".xlsx,.xls">
                </form>
                <a href="{{ path('app_zone_de_collecte_crud_new') }}" class="btn btn-primary px-4">Ajouter</a>
            </div>
        </div>
    </div>

    <!-- Carte principale -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0">Liste des zones</h5>
        </div>
        
        <div class="card-body p-0">
            <!-- Tableau -->
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 30%">Zone</th>
                            <th style="width: 20%">Population</th>
                            <th style="width: 25%">Temps de collecte</th>
                            <th class="text-end pe-4" style="width: 25%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for zone_de_collecte in zone_de_collectes %}
                            <tr>
                                <td class="ps-4">
                                    <strong>{{ zone_de_collecte.nom }}</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary rounded-pill px-3 py-1">
                                        {{ zone_de_collecte.population }} hab.
                                    </span>
                                </td>
                                <td>
                                    {% if zone_de_collecte.tempsDeCollecte %}
                                        {{ zone_de_collecte.tempsDeCollecte|date('H:i') }}
                                    {% else %}
                                        <span class="text-muted">Non défini</span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_zone_de_collecte_crud_show', {'id': zone_de_collecte.id}) }}" 
                                           class="btn btn-outline-info px-3">Détails</a>
                                        <a href="{{ path('app_zone_de_collecte_crud_edit', {'id': zone_de_collecte.id}) }}" 
                                           class="btn btn-outline-warning px-3">Modifier</a>
                                        <form method="post" action="{{ path('app_zone_de_collecte_crud_delete', {'id': zone_de_collecte.id}) }}" 
                                              onsubmit="return confirm('Confirmer la suppression ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone_de_collecte.id) }}">
                                            <button class="btn btn-danger px-3">Supprimer</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="py-4">
                                        <p class="text-muted mb-3">Aucune zone de collecte trouvée</p>
                                        <a href="{{ path('app_zone_de_collecte_crud_new') }}" 
                                           class="btn btn-primary">Ajouter une zone</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}