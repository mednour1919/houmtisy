{% extends 'base.html.twig' %}

{% block title %}Supprimer la zone de collecte - {{ zone_de_collecte.nom }}{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="row">
        <div class="col-md-10 mx-auto mt-4">
            <!-- En-tête de page -->
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <div>
                    <h1 class="h3 fw-bold mb-1">Supprimer la zone</h1>
                    <p class="text-muted mb-0">Confirmation de suppression définitive</p>
                </div>
                <a href="{{ path('app_zone_de_collecte_crud_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
                    Retour à la liste
                </a>
            </div>

            <!-- Card principale -->
            <div class="card shadow rounded-4 border-0 mb-4">
                <div class="card-body">
                    <div class="alert alert-warning rounded-4 shadow-sm">
                        <h5 class="fw-semibold">Attention</h5>
                        <p class="mb-0">Vous êtes sur le point de supprimer définitivement la zone <strong>"{{ zone_de_collecte.nom }}"</strong>.</p>
                    </div>

                    <form method="post" action="{{ path('app_zone_de_collecte_crud_delete', {'id': zone_de_collecte.id}) }}" 
                          onsubmit="return confirm('Confirmez-vous la suppression définitive de cette zone ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone_de_collecte.id) }}">
                        
                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a href="{{ path('app_zone_de_collecte_crud_index') }}" class="btn btn-outline-secondary px-4">
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                Confirmer la suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Section d'avertissement -->
            <div class="alert alert-danger shadow-sm rounded-4 mt-4 p-4">
                <div>
                    <h5 class="mb-2 fw-semibold">Action irréversible</h5>
                    <p class="mb-0">Cette suppression entraînera la perte définitive de toutes les données associées à cette zone de collecte.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}