{% extends 'base.html.twig' %}

{% block title %}Nouveau Camion{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="row">
        <div class="col-md-10 mx-auto mt-4">
            <!-- En-tête de page -->
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <div>
                    <h1 class="h3 fw-bold mb-1">Nouveau camion</h1>
                    <p class="text-muted mb-0">Ajouter un nouveau véhicule à la flotte</p>
                </div>
                <a href="{{ path('app_camion_c_r_u_d_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
                    Retour à la liste
                </a>
            </div>

            <!-- Form Card -->
            <div class="card shadow rounded-4 border-0 mb-4">
                <div class="card-header bg-transparent border-bottom-0 py-4">
                    <h5 class="mb-0 text-primary">
                        Formulaire de création
                    </h5>
                </div>
                <div class="card-body pt-0">
                    {{ include('camion_crud/_form.html.twig') }}
                </div>
            </div>

            <!-- Section d'aide -->
            <div class="alert alert-info shadow-sm rounded-4 mt-4 p-4">
                <div>
                    <h5 class="mb-2 fw-semibold">Conseils</h5>
                    <p class="mb-0">Remplissez tous les champs obligatoires marqués d'un astérisque (*). Vérifiez bien les informations avant de soumettre.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}