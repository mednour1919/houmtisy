{% extends 'base.html.twig' %}

{% block title %}Camions pour {{ nomZone }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Camions associés à : {{ nomZone }}</h1>
    
    {% if camions is empty %}
        <div class="alert alert-warning mt-4">
            Aucun camion trouvé pour cette zone.
            <a href="{{ path('front_zone_show', {'id': zone.id}) }}" class="btn btn-sm btn-outline-primary mt-2">
                ← Retour à la zone
            </a>
        </div>
    {% else %}
        <div class="row mt-4">
            {% for camion in camions %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ camion.nom }}</h5>
                            <p class="card-text">
                                ID: {{ camion.id }}<br>
                                Modèle: {{ camion.modele ?? 'Non spécifié' }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}