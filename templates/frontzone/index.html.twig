{% extends 'base.html.twig' %}

{% block title %}Zones de collecte{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[name="q"]');
            const timeInput = document.querySelector('input[name="time"]');
            const tableBody = document.querySelector('table tbody');
            let timeout;

            function updateResults() {
                const params = new URLSearchParams();
                if (searchInput.value) params.append('q', searchInput.value);
                if (timeInput.value) params.append('time', timeInput.value);

                fetch('{{ path('front_zone_index') }}?' + params.toString(), {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    tableBody.innerHTML = '';
                    if (data.zones.length > 0) {
                        data.zones.forEach(zone => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td class="ps-4"><strong>${zone.nom}</strong></td>
                                <td><span class="badge bg-primary rounded-pill px-3 py-1">${zone.population} hab.</span></td>
                                <td>${zone.tempsDeCollecte || '<span class="text-muted">Non défini</span>'}</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a href="/zones/${zone.id}" class="btn btn-outline-info px-3">Détails</a>
                                    </div>
                                </td>
                            `;
                            tableBody.appendChild(row);
                        });
                    } else {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td colspan="4" class="text-center py-5">
                                <div class="py-4">
                                    <p class="text-muted mb-3">Aucune zone de collecte trouvée</p>
                                </div>
                            </td>
                        `;
                        tableBody.appendChild(row);
                    }
                });
            }

            [searchInput, timeInput].forEach(input => {
                input.addEventListener('input', function() {
                    clearTimeout(timeout);
                    timeout = setTimeout(updateResults, 300);
                });
            });
        });
    </script>
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h2 mb-2">Zones de collecte</h1>
            <p class="text-muted mb-0">Consultation des zones disponibles</p>
        </div>
        
        <div class="d-flex flex-column flex-md-row gap-3 w-100 w-md-auto">
            <form method="get" class="d-flex flex-column flex-md-row gap-2 flex-grow-1">
                <input type="text" name="q" value="{{ search_term }}" 
                       placeholder="Rechercher une zone" 
                       class="form-control">
                <input type="time" name="time" value="{{ search_time }}" 
                       class="form-control" style="min-width: 120px;">
            </form>

            <div class="d-flex flex-column flex-md-row gap-2">
                <a href="{{ path('front_zone_export') }}" class="btn btn-success px-4">Exporter</a>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0">Liste des zones</h5>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 30%">Zone</th>
                            <th style="width: 20%">Population</th>
                            <th style="width: 25%">Temps de collecte</th>
                            <th class="text-end pe-4" style="width: 25%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for zone in zones %}
                            <tr>
                                <td class="ps-4">
                                    <strong>{{ zone.nom }}</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary rounded-pill px-3 py-1">
                                        {{ zone.population }} hab.
                                    </span>
                                </td>
                                <td>
                                    {% if zone.tempsDeCollecte %}
                                        {{ zone.tempsDeCollecte|date('H:i') }}
                                    {% else %}
                                        <span class="text-muted">Non défini</span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('front_zone_show', {'id': zone.id}) }}" 
                                           class="btn btn-outline-info px-3">Détails</a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="py-4">
                                        <p class="text-muted mb-3">Aucune zone de collecte trouvée</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# BLOC DE PAGINATION #}
            {% if zones is not empty and zones.getTotalItemCount() > 10 %}
                <div class="d-flex justify-content-center p-4">
                    {{ knp_pagination_render(zones) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}