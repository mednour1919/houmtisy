{% extends 'base.html.twig' %}

{% block title %}Détails du camion - {{ camion.nom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Détails du camion : {{ camion.nom }}</h1>
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <p><strong>Type :</strong> {{ camion.type }}</p>
                <p><strong>Statut :</strong> <span class="badge bg-primary">{{ camion.statut }}</span></p>
                <p><strong>Capacité :</strong> {{ camion.capacity ?? 'Non défini' }}</p>
                {% if camion.image %}
                    <img src="{{ asset('uploads/' ~ camion.image) }}" class="img-fluid mt-3" style="max-height: 200px;">
                {% endif %}
                <div class="mt-4">
                    <a href="{{ path('front_camion_index') }}" class="btn btn-outline-secondary">
                        Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}