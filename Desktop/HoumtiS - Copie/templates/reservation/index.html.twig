{% extends 'base.html.twig' %}

{% block title %}Réservations et Statistiques{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Réservations et Statistiques</h1>

        {# Statistiques #}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0">Statistiques</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="alert alert-info">
                                    <h4>Total des réservations</h4>
                                    <h2 class="mb-0">{{ stats.total }}</h2>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="alert alert-success">
                                    <h4>Moyenne par jour</h4>
                                    <h2 class="mb-0">{{ stats.moyenneParJour }}</h2>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="alert alert-warning">
                                    <h4>Station la plus réservée</h4>
                                    <h2 class="mb-0">{% if stats.stationLaPlusReservee %}Station {{ stats.stationLaPlusReservee }}{% else %}Aucune{% endif %}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Liste des réservations #}
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">Liste des réservations</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>N° Place</th>
                                <th>Date</th>
                                <th>Temps</th>
                                <th>Marque</th>
                                <th>Station</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for reservation in reservations %}
                            <tr>
                                <td>{{ reservation.numPLACE }}</td>
                                <td>{{ reservation.dateReservation }}</td>
                                <td>{{ reservation.temps }} minutes</td>
                                <td>{{ reservation.marque }}</td>
                                <td>Station {{ reservation.idStation }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucune réservation trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
