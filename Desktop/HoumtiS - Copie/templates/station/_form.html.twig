{# templates/station/_form.html.twig #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">{{ title|default('Formulaire de station') }}</h5>
        </div>
        <div class="card-body">
            {% if form_errors(form) %}
                <div class="alert alert-danger">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
            
            <div class="mb-3">
                {{ form_label(form.nomStation) }}
                {{ form_widget(form.nomStation) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.nomStation) }}
                </div>
                <small class="form-text text-muted">Entrez un nom de station entre 3 et 50 caractères</small>
            </div>
            
            <div class="mb-3">
                {{ form_label(form.capacite) }}
                {{ form_widget(form.capacite) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.capacite) }}
                </div>
                <small class="form-text text-muted">La capacité doit être un nombre positif inférieur à 1000</small>
            </div>
            
            <div class="mb-3">
                {{ form_label(form.zone) }}
                {{ form_widget(form.zone) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.zone) }}
                </div>
            </div>
            
            <div class="mb-3">
                {{ form_label(form.status) }}
                {{ form_widget(form.status) }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.status) }}
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('app_station_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </div>
{{ form_end(form) }}