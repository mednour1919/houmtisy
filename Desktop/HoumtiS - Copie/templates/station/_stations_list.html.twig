{# Affichage des statistiques #}
<div class="stats-container mb-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Capacité Totale</h5>
                    <p class="card-text h2">{{ total_capacite }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Nombre de Stations</h5>
                    <p class="card-text h2">{{ station_count }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

{# Tableau des stations #}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Nom</th>
                <th>Capacité</th>
                <th>Zone</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for station in pagination %}
            <tr>
                <td>{{ station.nomStation }}</td>
                <td>{{ station.capacite }}</td>
                <td>{{ station.zone }}</td>
                <td>
                    <span class="badge {% if station.status == 'Actif' %}bg-success{% elseif station.status == 'Inactif' %}bg-danger{% else %}bg-warning{% endif %}">
                        {{ station.status }}
                    </span>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_station_show', {'id_station': station.id_station}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_station_edit', {'id_station': station.id_station}) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune station trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div> 