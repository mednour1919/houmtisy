{% extends 'base.html.twig' %}

{% block title %}Station{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Station</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ station.nomStation }}</td>
                        </tr>
                        <tr>
                            <th>Capacité</th>
                            <td>{{ station.capacite }}</td>
                        </tr>
                        <tr>
                            <th>Zone</th>
                            <td>{{ station.zone }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>{{ station.status }}</td>
                        </tr>
                        <tr>
                            <th>Coordonnées</th>
                            <td>{{ station.latitude }}, {{ station.longitude }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_station_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_station_edit', {'id_station': station.id_station}) }}" class="btn btn-primary">Modifier</a>
                {{ include('station/_delete_form.html.twig') }}
            </div>
            <div class="col-md-6">
                <div id="map" style="height: 400px;"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var lat = {{ station.latitude }};
            var lng = {{ station.longitude }};
            
            var map = L.map('map').setView([lat, lng], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            L.marker([lat, lng])
                .addTo(map)
                .bindPopup("{{ station.nomStation }}")
                .openPopup();
        });
    </script>
{% endblock %}
